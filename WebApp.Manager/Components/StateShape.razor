<path id="@State.Code"
      d="@State.Path"
      class="state @(IsSelected ? "selected" : "")"
      style="fill:@CurrentFill"
      @onclick="() => OnClick.InvokeAsync(State.Code)"
      @onmouseover="() => IsHovered = true"
      @onmouseout="() => IsHovered = false" />

<text x="@State.TextX"
      y="@State.TextY"
      font-size="@(IsSelected ? "16" : State.FontSize)"
      font-weight="@(IsSelected ? "bold" : "normal")"
      fill="black"
      text-anchor="middle"
      dominant-baseline="middle"
      @onclick="() => OnClick.InvokeAsync(State.Code)"
      @onmouseover="() => IsHovered = true"
      @onmouseout="() => IsHovered = false"
      style="cursor:pointer;">
    @State.DisplayText(IsSelected)
</text>

<MudPaper Style="background-color: slategray;">
    @using WebApp.Domain.Models
    <svg viewBox="0 0 1000 589" xmlns="http://www.w3.org/2000/svg" style="width:100%;height:auto;">
        @foreach (var state in States)
        {
            <path id="@state.Code"
                  d="@state.Path"
                  class="state @(SelectedCode == state.Code ? "selected" : "")"
                  style="fill:@GetFill(state.Code)"
                  @onclick="() => OnClick(state.Code)" />
            @((MarkupString)$"<text x='{state.X}' y='{state.Y}' fill='black' font-size='10'>{state.Code}</text>")
        }
    </svg>
</MudPaper>
